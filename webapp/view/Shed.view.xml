<mvc:View
	height="100%"
	controllerName="controlActivities.controller.Shed"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<App id="sheds">
		<Page
			title="{i18n>shed_title}"
			enableScrolling="false">
			<TileContainer
				id="container"
				tiles="{
					path: '/OSSHED',
					parameters: {
						expand: 'TO_TXBROILERSLOT'
					},
					filters: [{
						path: 'DMSTATUS.STATUSID',
					    operator: 'EQ',
					    value1: '4'
					}]
				}">
				<StandardTile
					number="{SHEDID}"
					numberUnit="{i18n>shed_numberUnit}"
					title="{
						path: 'TO_TXBROILERSLOT/QUANTITY',
						type: 'sap.ui.model.type.Float'
					} {i18n>shed_birdsUnit}"
					info="{
						path: 'TO_TXBROILERSLOT/WEIGHT',
						type: 'sap.ui.model.type.Float'
					} {i18n>shed_weightUnit}"
					icon="sap-icon://factory"
					infoState="Success"
					press="handlePress" />
			</TileContainer>
		</Page>
	</App>	
</mvc:View>