<mvc:View
	height="100%"
	controllerName="controlActivities.controller.Master"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page
		id="master"
		title="{i18n>master_pageTitle}"
		enableScrolling="true" 
		showNavButton="true"
		navButtonPress="onNavBack">
		<List 
			id="myList"
			mode="SingleSelectMaster"
			selectionChange="onSelectionChange"
			items="{
					path: 'TO_TXFOODPLANDETAIL',
					sorter: {
				       path: 'INITIALDATE',
				       descending: false
					}
			}">
			<ObjectListItem 
				title="{WEEKNUMBER}"
				class="itr"
				number="{
					path: 'number',
					type: 'sap.ui.model.type.Float',
					formatOptions: {
						maxFractionDigits: 3
					},
					formatter : '.formatter.formatWeight'
				}"
				numberTextDirection="RTL"
				numberUnit="Kg"
				type="Active"
				numberState="Success">
				<attributes>
					<ObjectAttribute 
						text="{
							path: 'INITIALDATE',
							type: 'sap.ui.model.type.Date',
							formatOptions: {
								pattern: 'dd/MM/yyyy'
							}
						} - 
						{
							path: 'ENDINGDATE',
							type: 'sap.ui.model.type.Date',
							formatOptions: {
								pattern: 'dd/MM/yyyy'
							}
						}" 
						active="false" />
				</attributes>
			</ObjectListItem>
		</List>
		<!-- 
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button 
					text="{i18n>master_btnGraphic}" 
					type="Default" 
					icon="sap-icon://line-chart"
					press="OnShowGraphic"/>
			</Toolbar>
		</footer>

	-->
	</Page>
</mvc:View>