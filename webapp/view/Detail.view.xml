<mvc:View
	height="100%"
	controllerName="controlActivities.controller.Detail"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m">
	<Page
		id="detail"
		title="{i18n>appTitle}"
		enableScrolling="true" 
		showNavButton="{device>/system/phone}"
		navButtonPress="onNavBack">
		
		<content>
			<Panel backgroundDesign="Solid">
				<ObjectHeader
					title="{i18n>detail_weekTitle} {WEEKNUMBER}"
					icon="sap-icon://product"
					intro="{i18n>detail_objectHeaderText} {TO_TXBROILERSLOT/OSSHED.SHEDID}"
					fullScreenOptimized="true"
					condensed="false"
					responsive="true"
					background="Solid" >
					<statuses>
						<ObjectStatus
							title="{i18n>detail_objectStatusText1}"
							text="{
								path: 'TO_TXBROILERSLOT/WEIGHT',
								type: 'sap.ui.model.type.Float'
							}"
							state="None"/>
						<ObjectStatus
							title="{i18n>detail_objectStatusText2}"
							text="{
								path: 'TO_TXBROILERSLOT/QUANTITY',
								type: 'sap.ui.model.type.Integer'
							}"
							state="None" />
					</statuses>
				</ObjectHeader>
				<FlexBox
					alignItems="Start"
					justifyContent="Center">
					<items>
						<RatingIndicator
							iconSize="1.3em"
							enabled="false" 
							maxValue="5" 
							value="{SAMPLINGQUANTITY}"   
							visualMode="Full" />
					</items>
				</FlexBox>
			</Panel>
			<l:Grid
				hSpacing="0"
				width="auto"
				defaultSpan="XL12 L12 M12 S12"
				defaultIndent="XL0 L0 M0 S0">
				<l:content>
					<Table id="tableContol"
						items="{
							path: 'TO_TXDAILYACTIVITIES'
						}">
						<columns>
							<Column hAlign="Center">
								<Label 
									text="{i18n>detail_tableCol1}" 
									textAlign="Center" 
									design="Bold" />
							</Column>
							<Column hAlign="Center">
								<Label text="{i18n>detail_tableCol2}" textAlign="Center" design="Bold" />
							</Column>
							<Column hAlign="Center">
								<Label 
									text="{i18n>detail_tableCol3}" 
									textAlign="Center" 
									design="Bold" />
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<ObjectNumber
										number="{AGE}"
										unit="day"
										state="None"/>
									<ObjectNumber
										number="{DEADQUANTITY}"
										numberUnit="Birds"
										state="{
											parts:[ {path:'DEADQUANTITY'} ],
											formatter: '.formatter.verifyStatusMortality'
										}" />
									<ObjectNumber
										number="{DISCARDEDQUANTITY}"
										numberUnit="Birds"
										state="{
											parts:[ {path:'DISCARDEDQUANTITY'} ],
											formatter: '.formatter.verifyStatusDiscard'
										}" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</l:content>
			</l:Grid>
		</content>
		<footer>
			<Bar>
				<contentLeft>
					<Button 
						id="btnWeight"
						text="{i18n>detail_btnWeight}" 
						type="Default" 
						icon="sap-icon://compare-2"
						press="onRegisterWeight"/>
				</contentLeft>
				<contentRight>
					<Button 
						id="btnReport"
						text="{i18n>detail_btnReportDaily}" 
						type="Default" 
						icon="sap-icon://add"
						press="onDialogPress"/>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>